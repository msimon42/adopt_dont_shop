
<a href="/shelters">Shelter Index</a>
<h1>Pets in <%= @shelter.name %></h1>
<% @shelter_pets.each do |pet| %>
  <img src="<%= pet.image %>" alt="pet_image" style="width:200px;height:300px">
  <h2><%= pet.name %></h2>
  <p>Approximate Age: <%= pet.approx_age %></p>
  <p>Sex: <%= pet.sex %></p>
<% end %>
<%= link_to 'Add Pet', "/shelters/#{@shelter.id}/pets/new"
