<h1>Edit Shelter</h1>
<form action="/shelters/<%= @shelter.id %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <p>Name: <input type='text' name='shelter[name]' value="<%= @shelter.name %>"></p>
  <p>Address: <input type='text' name='shelter[address]' value="<%= @shelter.address %>"></p>
  <p>City: <input type='text' name='shelter[city]' value="<%= @shelter.city %>">
  State: <input type='text' name='shelter[state]' value="<%= @shelter.state %>">
  Zip: <input type='text' name='shelter[zip]' value="<%= @shelter.zip %>"></p><br>
  <input type='submit'/>
</form>
