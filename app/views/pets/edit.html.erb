<h1>Edit Pet Info</h1>
<%= form_tag "/pets/#{@pet.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br>
  <%= label_tag :image_file %>
  <%= text_field_tag :image_file %><br>
  <%= label_tag :description %>
  <%= text_field_tag :description %><br>
  <%= label_tag :approx_age %>
  <%= text_field_tag :approx_age %><br>
  <p> Male: <%= radio_button_tag 'gender', 'Male' %>
  Female: <%= radio_button_tag 'gender', 'Female' %></p>
  <%= submit_tag 'Submit' %>
<% end %>
<%= link_to "<button type='button'>Cancel</button>".html_safe, "/pets/#{@pet.id}" %>
