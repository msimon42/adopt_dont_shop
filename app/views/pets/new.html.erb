
<h1>Add Pet</h1>
<%= form_tag "/shelters/#{@shelter.id}/pets" do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br>
  <%= label_tag :image_file %>
  <%= text_field_tag :image_file %><br>
  <%= label_tag :description %>
  <%= text_field_tag :description %><br>
  <%= label_tag :approximate_age %>
  <%= text_field_tag :approximate_age %><br>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br>
  <p> Male: <%= radio_button_tag 'gender', 'Male' %>
  Female: <%= radio_button_tag 'gender', 'Female' %></p>
  <%= submit_tag 'Submit' %>
<% end %>
