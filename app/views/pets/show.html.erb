<%= link_to 'Pet Index', "/pets" %>
<h1><%= @pet.name %></h1>

 <img src="<%= @pet.image %>" alt="pet_image" style="width:200px;height:300px">
 <h2>Info</h2>
 <p><%= @pet.description %></p>
 <p>Approximate age: <%= @pet.approx_age %></p>
 <p>Sex: <%= @pet.sex %></p>
 <p>Adoption Status: <%= @pet.adoption_status %></p>

<%= link_to "<button type='button'>Update Info</button>".html_safe, "/pets/#{@pet.id}/edit" %>
<%= form_tag '/pets/', method: :delete do %>
  <%= submit_tag 'Delete' %>
<% end %>
